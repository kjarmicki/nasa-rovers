{
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "src/test/setupTests.js"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
